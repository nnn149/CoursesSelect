<Window x:Class="选课系统.WindowSeach"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="查询" Height="150" Width="360" ResizeMode="NoResize" Icon="/选课系统;component/images/seach.ico">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,50,0,43">
            <ComboBox Name="cmbSeach" Margin="10,0,0,0"  SelectedIndex="0" Panel.ZIndex="1">
                <ComboBoxItem>课程编号</ComboBoxItem>
                <ComboBoxItem>课程名称</ComboBoxItem>
            </ComboBox>
            <TextBox Name="txtSeach"  FontSize="16" Margin="10,0,0,0" Width="200" ></TextBox>
            <Button  Name="btnSeach" Margin="10,0,0,0" Click="btnSeach_Click">查询</Button>
        </StackPanel>
    </Grid>
</Window>
